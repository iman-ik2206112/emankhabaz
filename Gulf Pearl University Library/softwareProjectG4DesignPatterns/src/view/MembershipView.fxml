<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.text.Font?>

<GridPane fx:controller="controller.LibraryMenuController"
          xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          hgap="12" vgap="14"
          style="-fx-background-color: #f4f7fb;">

    <padding>
        <Insets top="25" bottom="25" left="25" right="25"/>
    </padding>

    <Label text="Apply for Membership"
           GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"
           style="-fx-text-fill: #2b4c7e;">
        <font><Font size="20"/></font>
    </Label>

    <Label text="Full Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" promptText="Full Name"
               style="-fx-background-radius: 8; -fx-background-color: white;"
               prefWidth="320" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Address:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="addressField" promptText="Address"
               style="-fx-background-radius: 8; -fx-background-color: white;"
               prefWidth="320" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Status:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <ChoiceBox fx:id="statusChoice"
               prefWidth="320"
               GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="University ID:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="universityIDField" promptText="e.g., S10001"
               style="-fx-background-radius: 8; -fx-background-color: white;"
               prefWidth="320" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Finance Account ID:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="financeIDField" promptText="e.g., ACC10001"
               style="-fx-background-radius: 8; -fx-background-color: white;"
               prefWidth="320" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <HBox spacing="20"
          alignment="CENTER"
          GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.columnSpan="2">

        <children>

            <Button text="Submit Application" onAction="#applyMembership"
                    style="-fx-background-color: #2b4c7e; -fx-text-fill: white; -fx-background-radius: 10;"
                    prefWidth="170"/>

            <Button text="Back" onAction="#goBack"
                    style="-fx-background-color: #a7bbc7; -fx-text-fill: black; -fx-background-radius: 10;"
                    prefWidth="170"/>

        </children>
    </HBox>

</GridPane>
