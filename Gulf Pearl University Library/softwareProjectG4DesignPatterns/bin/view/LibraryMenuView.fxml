<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="25"
      style="-fx-background-color: #f4f7fb;"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.LibraryMenuController">

    <padding>
        <Insets top="40" bottom="40" left="40" right="40"/>
    </padding>

    <children>

        <Label text="Gulf Pearl University Library"
               style="-fx-text-fill: #2b4c7e;">
            <font><Font size="22"/></font>
        </Label>

        <Button text="Apply for Membership" onAction="#openMembership" prefWidth="260"
                style="-fx-background-color: #2b4c7e; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 14;"/>

        <Button text="Reserve an Item" onAction="#openReservation" prefWidth="260"
                style="-fx-background-color: #3c6997; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 14;"/>

        <Button text="Exit" onAction="#exitApp" prefWidth="260"
                style="-fx-background-color: #a7bbc7; -fx-text-fill: black; -fx-background-radius: 10; -fx-font-size: 14;"/>

    </children>
</VBox>
